<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activities.MenuActivity">


    <ProgressBar
        android:id="@+id/menuActivityProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="386dp"
        android:layout_height="76dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop">

        </ImageView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/aboutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="60dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/menuHelloUserTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Nie jesteś zalogowany" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutUser">

        <Button
            android:id="@+id/MenuAllApartmentsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:onClick="navigateToAllApartments"
            android:text="szukaj mieszkania"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menuLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:text="zaloguj"
            android:onClick="navigateToLogin"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menuAddUserBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:onClick="navigateToAddUser"
            android:text="załóż konto"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menuAddApartmentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:text="dodaj ogłoszenie"
            android:onClick="navigateToAddApartment"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menuMyAccountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:text="moje konto"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menuLogoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:text="wyloguj"
            android:onClick="onLogoutButtonClick"
            android:textAllCaps="false"
            android:textColor="#707070"
            android:textSize="24sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>