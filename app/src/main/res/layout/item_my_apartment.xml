<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myApartmentLayout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/shadowrectangle"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/imageplaceholder"
            tools:srcCompat="@drawable/imageplaceholder" />

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:text=""
                android:textColor="#484848"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:textColor="#9E9999"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPropertySize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="1"
                    android:text=""
                    android:textColor="#9E9999"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTransactionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="1"
                    android:text=""
                    android:textColor="#9E9999"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/moreActionsBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="showMoreActionsMenu"
            android:padding="5dp"
            app:srcCompat="@drawable/morebtn" />
    </LinearLayout>


</RelativeLayout>